<div>
  <h3>Answer this question</h3>
  <form>
    <div class="form-group">
      <label for="author">Name:</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="content">Answer:</label>
      {{textarea rows="4" value=content id="content" class="form-control"}}
    </div>
    <button {{action 'saveAnswer'}} class="btn btn-default">Submit</button>
  </form>
</div>
