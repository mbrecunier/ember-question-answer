<h2>Ask a Question</h2>
<div>
  <form>
    <div class="form-group">
      <label for="ask">Question:</label>
      {{input class="form-control" value=ask id="ask"}}
    </div>

    <div class="form-group">
      <label for="author">Name:</label>
      {{input class="form-control" value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes:</label>
      {{textarea class="form-control" rows="4" value=notes id="notes"}}
    </div>

    <button {{action 'saveQuestion'}}>Submit</button>
  </form>
</div>
